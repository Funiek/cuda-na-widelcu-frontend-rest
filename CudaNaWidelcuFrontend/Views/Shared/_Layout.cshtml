<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CudaNaWidelcuFrontend</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CudaNaWidelcuFrontend.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 navbar-color">
            <div class="container-fluid">
                <a class="navbar-brand navbar-item-text" href="/">Cuda Na Widelcu</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link navbar-item-text" href="/">Strona główna</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link navbar-item-text" asp-area="" asp-controller="Recipe" asp-action="Index" asp-route-id="1">Śniadanie</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link navbar-item-text" asp-area="" asp-controller="Recipe" asp-action="Index" asp-route-id="2">Obiad</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link navbar-item-text" asp-area="" asp-controller="Recipe" asp-action="Index" asp-route-id="3">Kolacja</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - CudaNaWidelcu - Dawid Pieciul & Krzysztof Funkowski
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
